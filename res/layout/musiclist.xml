<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dip"
    android:orientation="horizontal" 
    android:background="#FFFFFF">
    
    <TextView
        android:id="@+id/divider_line"
        android:layout_width="4dp"
        android:layout_height="44dp"
        android:layout_marginLeft="3dp"
        android:background="#71ac02"
        android:layout_gravity="center"
        android:layout_marginRight="5dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/music_list_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="#3d3e3b"
            />

        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
        <ImageView
                 android:id="@+id/littleiconn"
                  android:layout_marginTop="1dip"
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/littleicon" 
                  android:layout_marginRight="3dip" 
                  />
        
        <TextView
            android:id="@+id/music_list_singer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dip"
            android:textColor="#7b7c79"
            android:textSize="13dp"/>
            </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/music_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="5dip"
        android:textColor="#3d3e3b" />

</LinearLayout>